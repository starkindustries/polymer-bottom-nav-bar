{
  "name": "todo-app",
  "description": "ToDo App",
  "main": "todo-app.js",
  "dependencies": {
    "@polymer/lit-element": "^0.5.2",
    "@polymer/polymer": "^3.0.0",
    "browser-sync": "^2.26.3",
    "concurrently": "^4.0.1",
    "lodash": "^4.17.11"
  },
  "devDependencies": {
    "@polymer/iron-demo-helpers": "^3.0.0-pre.19",
